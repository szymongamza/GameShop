                                                  HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                        <Button           Content="2"
                              Foreground="White"
                              FontSize="25"
                              FontWeight="Medium"
                                          Margin="20 0 20 0">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
